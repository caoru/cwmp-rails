<% provide(:title, "Download") %>

<h1>Download</h1>

<div class="download">
  <%= form_for(:updownload, url: api_cpe_download_path, :method => :post) do |f| %>
    <div class="row">
      <div class="col-md-6">

        <h4>Request</h4>

        <!--
        <%= f.label :commandKey, "Command Key" %>
        <%= f.text_field :commandKey, class: 'form-control'  %>
        -->

        <%= f.label :file_type, "File Type" %>
        <select class="form-control file_type download" name="file_type" id="updownload_file_type">
          <option value="1 Firmware Upgrade Image">1 Firmware Upgrade Image</option>
          <option value="2 Web Content">2 Web Content</option>
          <option value="3 Vendor Configuration File">3 Vendor Configuration File</option>
          <option value="4 Tone File">4 Tone File</option>
          <option value="5 Ringer File">5 Ringer File</option>
        </select>

        <%= f.label :url, "URL" %>
        <%= f.text_field :url, class: 'form-control download'  %>

        <%= f.label :username, "Username" %>
        <%= f.text_field :username, class: 'form-control'  %>

        <%= f.label :password, "Password" %>
        <%= f.text_field :password, class: 'form-control'  %>

        <!--
        <%= f.label :file_size, "File Size" %>
        <%= f.text_field :file_size, class: 'form-control'  %>
        -->

        <!--
        <%= f.label :target_file_name, "Target File Name" %>
        <%= f.text_field :target_file_name, class: 'form-control'  %>
        -->

        <!--
        <%= f.label :delay_seconds, "Delay Seconds" %>
        <%= f.text_field :delay_seconds, class: 'form-control'  %>
        -->

      </div>
      <div class="col-md-6" id="parameters">
        <h4>Response</h4>
        <textarea name="api[response_text]" id="api_response_text"
                  cols="50" rows="13" readonly="true"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit 'Apply', class: "btn btn-primary apply_updownload download" %>
      </div>
    </div>
  <% end %>
</div>
